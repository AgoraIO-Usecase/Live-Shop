<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="309dp"
    android:layout_height="385dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_guess"
        android:padding="1dp">

        <ImageView
            android:id="@+id/img_guess"
            android:layout_width="match_parent"
            android:layout_height="209dp"
            android:src="@mipmap/img_guess" />

        <TextView
            android:id="@+id/txt_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/bg_txt_0"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="LIVE"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/img_eye"
            android:layout_width="20dp"
            android:layout_height="13dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@id/txt_live"
            android:src="@mipmap/eye" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/img_eye"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="918,403"
            android:textColor="#CCCCCC"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:paddingLeft="13dp"
            android:paddingTop="13dp"
            android:paddingRight="10dp"
            android:paddingBottom="13dp"
            android:src="@mipmap/close" />

        <TextView
            android:id="@+id/txt_current_guess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_guess"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="17dp"
            android:text="Current Guessï¼š"
            android:textColor="#333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/quiz_stem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_current_guess"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="10dp"
            android:text="Will Byuant have this 3 point?"
            android:textColor="#141414"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/group_left"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_below="@id/quiz_stem"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="25dp"
            android:padding="5dp"
            android:src="@mipmap/group" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quiz_stem"
            android:layout_marginTop="28dp"
            android:layout_toRightOf="@id/group_left"
            android:text="6,312"
            android:textColor="#666666"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/group_right"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_below="@id/quiz_stem"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:layout_marginRight="41dp"
            android:padding="5dp"
            android:src="@mipmap/group" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quiz_stem"
            android:layout_marginTop="28dp"
            android:layout_toLeftOf="@id/group_right"
            android:text="6,715"
            android:textColor="#666666"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="11dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_guess_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_custom_btn"
                android:text="No"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_guess_yes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_custom_btn"
                android:text="Yes"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>