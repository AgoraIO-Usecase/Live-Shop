<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="270dp"
    android:layout_height="200dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4f4f4">

        <TextView
            android:id="@+id/bet_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="Please enter the amount"
            android:textColor="#030303"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/bet_input"
            android:layout_width="250dp"
            android:layout_height="36dp"
            android:layout_below="@id/bet_top"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:background="@drawable/bg_bet_edt"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:textColor="#333333"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="9dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_bet_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_bet_cancel"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="#666666"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_bet_go"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_custom_btn"
                android:text="Go!"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>